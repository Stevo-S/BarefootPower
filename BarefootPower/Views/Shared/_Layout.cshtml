<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Barefoot Power</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/customcss")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Barefoot Power", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Agents", "Index", "Agents")</li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                            Messages
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Inbound Messages", "Index", "InboundMessages")</li>
                            <li>@Html.ActionLink("Outbound Messages", "Index", "OutboundMessages")</li>
                        </ul>
                    </li>
                    <li>@Html.ActionLink("Registered Sales", "Index", "SaleRegistrations")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>

                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>

    <div class="jumbotron" style="padding: 2px">
        <div class="container">
            <div class="row">
                <div class="col-md-6" style="color: orangered">
                    <h2>@ViewBag.Title</h2>
                </div>
                <div class="col-md-6">
                    <img src="@Url.Content("~/Content/Images/BarefootPower_logo_orange.jpg")" alt="Barefoot Power Logo" width="200" height="80" class="pull-right" />
                </div>
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Better SMS LTD</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/custom")
    @RenderSection("scripts", required: false)
</body>
</html>
